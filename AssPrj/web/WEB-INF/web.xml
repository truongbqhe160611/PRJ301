<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>HomeFilter</filter-name>
        <filter-class>Filter.HomeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HomeFilter</filter-name>
        <url-pattern>/Home.jsp</url-pattern>
        <url-pattern>/Room_List.jsp</url-pattern>
        <url-pattern>/Room_Single.jsp</url-pattern>
        <url-pattern>/Room_Double.jsp</url-pattern>
        <url-pattern>/Room_VIP.jsp</url-pattern>
        <url-pattern>/Room_Booking.jsp</url-pattern>
        <url-pattern>/Room_Booked.jsp</url-pattern>
        <url-pattern>/Food.jsp</url-pattern>
        <url-pattern>/AccountInfor.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Login.</servlet-name>
        <servlet-class>controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>controller.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Booking</servlet-name>
        <servlet-class>controller.Bookings</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadBooked</servlet-name>
        <servlet-class>controller.LoadBooked</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteBooked</servlet-name>
        <servlet-class>controller.DeleteBooked</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateBooked</servlet-name>
        <servlet-class>controller.UpdateBooked</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadAccount</servlet-name>
        <servlet-class>controller.LoadAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateByCid</servlet-name>
        <servlet-class>controller.updateByCid</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteAccount</servlet-name>
        <servlet-class>controller.DeleteAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAccount</servlet-name>
        <servlet-class>controller.UpdateAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateByCustomerId</servlet-name>
        <servlet-class>controller.updateByCustomerId</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login.</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Booking</servlet-name>
        <url-pattern>/booking</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadBooked</servlet-name>
        <url-pattern>/loadbooked</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteBooked</servlet-name>
        <url-pattern>/deletebooked</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateBooked</servlet-name>
        <url-pattern>/updatebooked</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadAccount</servlet-name>
        <url-pattern>/loadaccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateByCid</servlet-name>
        <url-pattern>/updateByCid</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteAccount</servlet-name>
        <url-pattern>/deleteaccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateAccount</servlet-name>
        <url-pattern>/updateaccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateByCustomerId</servlet-name>
        <url-pattern>/updatebycustomerid</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
